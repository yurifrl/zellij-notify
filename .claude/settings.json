{
  "hooks": {
    "user-prompt-submit-hook": {
      "command": "zellij pipe -n \"notify\" -a \"pane_id=$ZELLIJ_PANE_ID\" \"notification\"",
      "blocking": false,
      "captureStdout": false,
      "captureStderr": false
    },
    "tool-use-ended-hook": {
      "command": "zellij pipe -n \"notify\" -a \"pane_id=$ZELLIJ_PANE_ID\" \"posttooluse\"",
      "blocking": false,
      "captureStdout": false,
      "captureStderr": false
    }
  }
}
